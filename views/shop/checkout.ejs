			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-7">
						<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Barang yang dibeli</h3>
								<p class="alerttitle"><i class="fa fa-cart-arrow-down " aria-hidden="true"></i>   Ini halaman terakhir dari proses belanjamu. Pastikan semua sudah benar, ya. :)</p>
							</div>

							<div class="row">
								<div class="col-md-6">
									<div id="product-main-img">
										<div class="product-preview">
											<img src="/<%= art.imageUrl %>" alt="">
										</div>
									</div>
								</div>
								<!-- /Product main img -->
			
								<!-- Product details -->
								<div class="col-md-6">
									<div class="product-details">
										<h2 class="product-name"><%= art.name %></h2>
										<div>
											<p class="product-price">Rp <%= art.price %></p>
										</div>
									</div>

								</div>
								
							</div>
						</div>
						
						<!-- Shiping Details -->
						<div class="section-title">
							<h3 class="title">Pengiriman dan Pembayaran</h3>
						</div>

						<div class="shiping-details">
							<div class="bor">
								<div class="row">
									<div class="col">
										<div class="pengiriman">
											<h5>Alamat </h5>
											<a href="#" class="edit-alamat"><i class="fa fa-arrow-right"></i></a>
											<p>Budi Setiawan (628123456789) </p>
											<p>Komp. Palapa Raya C No. 99<br/>
												Halu, Kota Dopamin, 010101</p>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="pengiriman">
											<h5>Pilih Pengiriman</h5>
											<form>
												<select class="input-select">
													<option value="0">Kargo</option>
													<option value="1">Same Day</option>
													<option value="2">Go-Send</option>
												</select>
											</form>
										</div>
									</div>

									<div class="col-md-6">
										<div class="pengiriman">
											<h5>Pilih Kurir</h5>
											<form>
												<select class="input-select">
													<option value="0">JNE</option>
													<option value="1">JNT</option>
													<option value="2">SiCepat</option>
												</select>
											</form>
										</div>
									</div>
								</div>
							</div>
							<div class="bor2">
								<div class="col-md-6">
									<div class="pembayaran">
										<img src = "/img/gopay.svg"/>
										<h5> Gopay</h5>
										<a href="#" class="edit-bayar"><i class="fa fa-arrow-right"></i></a>
									</div>
								</div>
							</div>

							<div class="asuransi">
								<h5>Asuransi Pengiriman <i class="fa fa-info-circle" aria-hidden="true"></i></h5>
								<div class="input-checkbox">
									<input type="checkbox" id="terms">
									<label for="terms">
										<p>Rp 10.000 </p> 
										<span></span>
									</label>
								</div>
							</div>
						</div>
						<!-- /Shiping Details -->
					</div>

					<!-- Order Details -->
					<div class="col-md-5 order-details">
						<div class="bor3">
							<div class="section-title text-center">
								<h3 class="title">Ringkasan Belanja</h3>
							</div>
							<div class="order-summary">
								<div class="order-col">
									<div><strong>LUKISAN</strong></div>
									<div><strong>TOTAL</strong></div>
								</div>
								<div class="order-products">
									<div class="order-col">
										<div>Lukisan Motif Bata</div>
										<div>Rp <%= art.price %></div>
									</div>
								</div>
								<div class="order-col">
									<div>Shiping</div>
									<div>Rp 30.000</div>
								</div>
								<div class="order-col">
									<div><strong>TOTAL</strong></div>
									<div><strong class="order-total">Rp <%= art.price + 30000 %></strong></div>
								</div>
							</div>
							<form action="/shop/checkout" method="post">
								<input type="hidden" name="totalPrice" value="<%= art.price + 30000 %>">
								<input type="hidden" name="productId" value="<%= art.id %>">
								<button style="width: 100%" type="submit" class="primary-btn order-submit">Bayar</button>
							</form>
					</div>
					</div>
					<!-- /Order Details -->
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
