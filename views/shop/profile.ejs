<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>ARTCA</title>

    <!-- Google font -->
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700"
      rel="stylesheet"
    />

    <!-- Bootstrap -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Slick -->
    <link
      type="text/css"
      rel="stylesheet"
      href="/css/external/slick/slick.css"
    />
    <link
      type="text/css"
      rel="stylesheet"
      href="/css/external/slick/slick-theme.css"
    />

    <!-- nouislider -->
    <link
      type="text/css"
      rel="stylesheet"
      href="/css/external/nouislider/nouislider.min.css"
    />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/css/font-awesome/font-awesome.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css"
    />

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/css/shop/profile.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand fixed-top navbar-light bg-light">
      <div class="container-fluid mx-5">
        <a class="navbar-brand" href="/shop/home-login">
          <img src="/img/Logo.svg" alt="Logo" height="50px" />
        </a>

        <form class="input-group mx-5">
          <input
            class="form-control"
            type="search"
            placeholder="Search"
            aria-label="Search"
            style="width: 10px"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link me-4" href="#">
              <img src="/img/Messages.svg" alt="Shopping Cart" height="25px" />
            </a>
            <a class="nav-link me-4" href="#">
              <img src="/img/Bell.svg" alt="Shopping Cart" height="25px" />
            </a>
          </div>
          <div id="profil-body">
            <a class="profil-body-budi" href="/shop/profile">
              <img src="/img/profil-budi.svg" alt="profil" height="50px" />
            </a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->

    <div class="section">
      <div class="container">
        <div class="row">
          <!-- Product main img -->
          <div class="col-md-3 profil-site">
            <div id="profil-body">
              <a class="profil-body-budi" href="#">
                <img src="/img/profil-budi.svg" alt="profil" height="50px" />
                <h6><%= user.name %></h6>
              </a>
            </div>
            <hr
              class="mb-3"
              style="width: 328px; margin-left: -20px; margin-top: 35px"
              ;
            />

            <div id="profil-chat">
              <div class="main">
                <a class="profil-chat-active" href="#"><h6>Chat/Diskusi</h6></a>
                <a class="profil-chat-isi-1" href="#">
                  <p>Chat</p>
                </a>
                <a class="profil-chat-isi-2" href="#">
                  <p>Ulasan</p>
                </a>
              </div>
              <hr
                class="mb-3"
                style="width: 328px; margin-left: -20px; margin-top: 5px"
                ;
              />
              <div class="tree">
                <a class="profil-chat-active" href="#"><h6>Transaksi</h6></a>
                <a class="profil-chat-isi-1" href="/shop/pembayaran">
                  <p>Menunggu Pembayaran</p>
                </a>
                <a class="profil-chat-isi-2" href="/shop/list-transaksi">
                  <p>Daftar Transaksi</p>
                </a>
              </div>
            </div>
            <div id="profil-transaksi"></div>
          </div>
          <!-- /Product main img -->

          <!-- Product details -->
          <div class="col-md-9">
            <div class="judul">
              <p>
                <i class="bi bi-person fa-lg"></i>
                <%= user.name %>
              </p>
            </div>

            <div class="profil-main">
              <h6 class="judul">Biodata Diri</h6>
              <hr class="mb-3" style="width: 965px; margin-left: -20px" ; />
              <div class="row">
                <div class="col-md-5 container-img">
                  <div class="border-add">
                    <div class="gambar-profil">
                      <img
                        src="/img/profil.png"
                        alt=""
                        style="width: 300px; height: 300px"
                      />
                    </div>
                    <button
                      type="button"
                      class="btn btn-outline-secondary"
                      style="
                        width: 300px;
                        height: 40px;
                        margin-top: 10px;
                        border-color: rgba(0, 0, 0, 0.3);
                        color: black;
                      "
                      ;
                    >
                      Pilih Foto
                    </button>
                    <p class="info-gambar">
                      Besar file: maksimal 10.000.000 bytes (10 Megabytes).
                      <br />
                      Ektensi file yang diperbolehkan: .JPG .JPEG .PNG
                    </p>
                    <button
                      type="button"
                      class="btn btn-outline-secondary"
                      style="
                        width: 344px;
                        height: 40px;
                        margin-top: 15px;
                        margin-left: -20px;
                        border-color: rgba(0, 0, 0, 0.3);
                        color: black;
                      "
                      ;
                    >
                      Ubah Kata Sandi
                    </button>
                  </div>
                </div>

                <div class="col-md-7 container-isi">
                  <div class="isi-add">
                    <h6 class="judul">Ubah Biodata Diri</h6>
                    <div class="change-bio">
                      <table>
                        <tr>
                          <td>Nama</td>
                          <td class="td"></td>
                          <td>
                            <%= user.name %>
                            <a class="change-name" href="#">Ubah</a>
                          </td>
                        </tr>
                        <tr>
                          <td>Tanggal Lahir</td>
                          <td class="td"></td>
                          <td>
                            <a class="tgl-lahir-add" href="#">
                              <%= user.dob %>
                            </a>
                          </td>
                        </tr>
                        <tr>
                          <td>Jenis Kelamin</td>
                          <td class="td"></td>
                          <td>
                            <%= user.sex %>
                            <a class="change-kelamin" href="#">Ubah</a>
                          </td>
                        </tr>
                      </table>
                    </div>
                    <h6 class="judul">Ubah Biodata Diri</h6>
                    <div class="change-bio">
                      <table>
                        <tr>
                          <td>Email</td>
                          <td class="td"></td>
                          <td>
                            <%= user.email %>
                            <a class="verifornot" href="#">Terverifikasi</a>
                            <a class="change-email" href="#">Ubah</a>
                          </td>
                        </tr>
                        <tr>
                          <td>Nomor HP</td>
                          <td class="td"></td>
                          <td>
                            <%= user.phone || '' %>
                            <a class="verifornot" href="#">Terverifikasi</a>
                            <a class="change-nomor" href="#">Ubah</a>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /Product details -->
      </div>
      <!-- /row -->
    </div>
    <!-- /container -->

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted">
      <!-- Section: Links  -->
      <section class="">
        <div class="container text-center text-md-start">
          <!-- Grid row -->
          <div class="row">
            <!-- Grid column -->
            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
              <!-- Content -->
              <h6 class="text-uppercase fw-bold mb-4">
                <img src="/img/Logo.svg" alt="Logo" height="50px" />
              </h6>
              <p>
                Artca merupakan perangkat lunak yang dikembangkan untuk
                mempermudah masyarakat dalam melakukan pembelian terhadap
                lukisan-lukisan
              </p>
            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4 bagian1-footer">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">ARTCA</h6>
              <p>
                <a href="#!" class="text-reset">Tentang ARTCA</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Pusat Bantuan</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Syarat dan Ketentuan</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Kebijakan Privasi</a>
              </p>
            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4 bagian2-footer">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Suarakan Idemu!</h6>
              <p>
                <a href="#!" class="text-reset">Lapor Bug</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Feedback</a>
              </p>
            </div>
            <!-- Grid column -->
          </div>
          <!-- Section: Links  -->

          <!-- Copyright -->
          <div
            class="text-center p-4"
            style="background-color: rgba(0, 0, 0, 0.05)"
          >
            © 2021 Copyright: Artca Painting Shop/ PT. Aneka Usaha Indonesia
          </div>
          <!-- Copyright -->

          <!-- jQuery Plugins -->
          <script src="/js/jquery.min.js"></script>
          <script src="/js/bootstrap.min.js"></script>
          <script src="/js/slick.min.js"></script>
          <script src="/js/nouislider.min.js"></script>
          <script src="/js/jquery.zoom.min.js"></script>
          <script src="/js/main.js"></script>
        </div>
      </section>
    </footer>
  </body>
</html>
